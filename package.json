{
  "name": "@hhplum/release-scripts",
  "version": "1.1.0",
  "description": "release scripts",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hhplum/release-scripts.git"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "prettier": "pnpm prettier-ci --write",
    "prettier-ci": "prettier --cache --ignore-path=.gitignore --check '**/*.{ts,json,md,yml}'",
    "qa": "tsc && pnpm prettier-ci && pnpm build",
    "release": "tsx scripts/release.ts"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "mri": "^1.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "publint": "^0.3.2",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.8",
    "esbuild": "^0.24.2",
    "prettier": "^3.4.2",
    "tsx": "^4.16.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "conventional-changelog-cli": "*"
  },
  "peerDependenciesMeta": {
    "conventional-changelog-cli": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.15.4"
}
